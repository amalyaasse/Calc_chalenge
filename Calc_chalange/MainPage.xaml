<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calc_chalange.MainPage"
             BackgroundColor="DarkBlue">


    <ContentPage.Content>
        
        <StackLayout Padding="20">

            <Label x:Name="questionLabel" Text="Frage" FontSize="24" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Entry x:Name="answerEntry" Placeholder="Ihre Antwort" Keyboard="Numeric" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button Text="Überprüfen" Clicked="CheckAnswer" BackgroundColor="DarkBlue" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Label x:Name="correctAnswerLabel" IsVisible="False" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Label x:Name="summaryLabel" IsVisible="False" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button x:Name="restartButton" Text="Neu starten" Clicked="RestartExercise" IsVisible="False" BackgroundColor="DarkBlue" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>


        </StackLayout>
        
    </ContentPage.Content>

       


</ContentPage>
